#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Welcome to Tic Tac Toe! How many players do you want? Type 0, 1, 2 "
input = gets.strip
def turnongame(input)
if input == "0" #0 player . ai vs ai
Game.new(Players::Computer.new("X") , Players::Computer.new("O"), board = Board.new)
elsif input == "1"# 1 player vs ai. humans go first
Game.new(Players::Human.new("X") ,Players::Computer.new("O"), board = Board.new)
elsif input == "2" #2 players
Game.new( Players::Human.new("X") ,  Players::Human.new("O"), board = Board.new)
else
puts "Welcome to Tic Tac Toe! How many players do you want? Type 0, 1, 2 "
newinput = gets.strip
turnongame(newinput)
end
end

turnongame(input)
